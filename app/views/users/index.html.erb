<div class="col-md-12">
  <div class="group">
    <%= link_to('New User', new_user_path, class: "btn btn-primary pull-right") %>
  </div>
   <table class="table">
     <thead>
       <tr>
         <td>#</td>
         <td>Name</td>
         <td>E-mail</td>
       </tr>
     </thead>
     <tbody>
       <% @users.each do |user| %>
         <tr>
           <td><%= user.id %></td>
           <td><%= user.name %></td>
           <td><%= user.email %></td>
           <td>
             <%= link_to 'Show', user, class: "btn btn-sm btn-default" %>
             <%= link_to 'Edit', edit_user_path(user), class: "btn btn-sm btn-default" %>
             <%= link_to 'Destroy', user, method: :delete, class: "btn btn-sm btn-default", data: { confirm: 'Are you sure?' } %>
           </td>
         </tr>
       <% end %>
      </tbody>
    </table>
</div>
